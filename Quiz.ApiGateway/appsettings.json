{
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": { "Path": "/identity/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/api/{**catch-all}" }]
      },

      "quiz-route": {
        "ClusterId": "quiz-cluster",
        "Match": { "Path": "/quiz/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/api/{**catch-all}" }]
      },

      "live-rest-route": {
        "ClusterId": "live-cluster",
        "Match": { "Path": "/live/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/api/{**catch-all}" }]
      },

      "live-hub-route": {
        "ClusterId": "live-cluster",
        "Match": { "Path": "/hubs/{**catch-all}" },
        "Transforms": [{ "PathPattern": "/hubs/{**catch-all}" }]
      }
    },

    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity": { "Address": "http://localhost:5001/" }
        }
      },

      "quiz-cluster": {
        "Destinations": {
          "quiz": { "Address": "http://localhost:5002/" }
        }
      },

      "live-cluster": {
        "Destinations": {
          "live": { "Address": "http://localhost:5003/" }
        }
      }
    }
  }
}